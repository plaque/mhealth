<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="plaque.mhealth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_mhealth"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_mhealth"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MedsActivity"
            android:label="@string/title_activity_meds"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.SittersActivity"
            android:label="@string/title_activity_sitters"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.PupilsActivity"
            android:label="@string/title_activity_pupils"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ResultsActivity"
            android:label="@string/title_activity_results"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>